<UserControl x:Class="AutoJTTXUtilities.Controls.AJTToast.Toast"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoJTTXUtilities.Controls.AJTToast"
             
             VerticalAlignment="Bottom" HorizontalAlignment="Center"
             Margin="0,0,0,50"
             mc:Ignorable="d" Background="Transparent"
             MaxWidth="900" MaxHeight="90">
    <Grid>
        <Border CornerRadius="8"  Background="Black" Opacity="0.6"/>
        <TextBlock x:Name="ToastContent" Foreground="White" Margin="10,6,10,6" TextAlignment="Center" TextWrapping="Wrap"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Text="Hello"/>
    </Grid>
</UserControl>
